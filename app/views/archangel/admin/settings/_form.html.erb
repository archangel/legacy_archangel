<%= simple_form_for([:admin, @settings],
                    as: :settings,
                    url: :admin_settings,
                    html: { class: "form-vertical" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :per_page, as: :integer %>

    <%= image_tag(@settings.logo.thumb.url) %>

    <%= f.input :logo, as: :file %>
    <%= f.input :logo_cache, as: :hidden %>

    <%= f.input :remove_logo, as: :boolean,
                              checked_value: true,
                              unchecked_value: false if @settings.logo? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
