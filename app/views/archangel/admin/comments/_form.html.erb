<%= simple_form_for([:admin, @source, @comment], html: { class: "form-vertical" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email, as: :email %>

    <% if f.object.new_record? %>
      <%= f.input :author_id, as: :hidden, input_html: { value: current_user.id } %>
    <% else %>
      <%= f.association :author, as: :select, include_blank: false %>
    <% end %>

    <%= f.input :content, as: :text %>
    <%= f.input :approved_at, as: :date_time_picker, input_html: { value: datetimepicker_field_value(f.object.approved_at, f.object.new_record?) } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
