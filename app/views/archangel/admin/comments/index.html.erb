<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Comment List</h2>

    <%= render "archangel/admin/comments/buttons" %>

    <%= render "archangel/admin/shared/breadcrumbs" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <% if @comments.any? %>
        <%= paginate @comments %>

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Author</th>
              <th>Parent</th>
              <th>Approved at</th>
              <th class="text-right">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td><%= comment.name %></td>
                <td><%= comment.email %></td>
                <td><%= author_link(comment.author) %></td>
                <td><%= comment.parent_id %></td>
                <td><%= comment.approved_at %></td>
                <td>
                  <ul class="nav nav-pills navbar-right">
                    <li><%= link_to "Edit", edit_admin_post_comment_path(@source, comment) %></li>
                    <li><%= link_to "Destroy", admin_post_comment_path(@source, comment), method: :delete, data: { confirm: Archangel.t(:are_you_sure) } %></li>
                  </ul>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= paginate @comments %>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: "Comments") %>
        </p>
      <% end %>
    </div>
  </div>
</div>
