<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2><%= Archangel.t(:show_resource, resource: @asset.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="assets-show panel panel-default">
  <div class="panel-body">
    <p>
      <strong><%= Archangel.t(:title) %>:</strong>
      <%= @asset.title %>
    </p>

    <p>
      <strong><%= Archangel.t(:description) %>:</strong>
      <%= @asset.description %>
    </p>

    <p>
      <strong><%= Archangel.t(:file) %>:</strong>
      <%= @asset.file %>

      <div>
        <%= image_tag(@asset.file.thumb.url) %>
      </div>
    </p>

    <p>
      <strong><%= Archangel.t(:uploader) %>:</strong>
      <%= @asset.uploader_id %>
    </p>

    <p>
      <strong><%= Archangel.t(:file_size) %>:</strong>
      <%= number_to_human_size(@asset.file_size) %>
    </p>

    <p>
      <strong><%= Archangel.t(:content_type) %>:</strong>
      <%= @asset.content_type %>
    </p>
  </div>
</div>
