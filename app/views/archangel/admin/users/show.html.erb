<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>User</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12 ibox-content">
      <%= image_tag(@user.avatar.thumb.url) %>

      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>

      <p>
        <strong>Userame:</strong>
        <%= @user.username %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
    </div>
  </div>
</div>
