<ul class="nav nav-pills pull-right">
  <% if member_action? || new_action? %>
    <li><%= link_to(glyphicon_icon("chevron-left", text: Archangel.t(:back)), admin_users_path) %></li>
  <% end %>

  <% if collection_action? || show_action? || edit_action? %>
    <li><%= link_to(glyphicon_icon("plus", text: Archangel.t(:new)), new_admin_user_path) %></li>
  <% end %>

  <% if show_action? %>
    <li><%= link_to(glyphicon_icon("ok", text: Archangel.t(:edit)), edit_admin_user_path(@user)) %></li>
  <% end %>

  <% if show_action? || edit_action? %>
    <li><%= link_to(glyphicon_icon("remove", text: Archangel.t(:destroy)), admin_user_path(@user),
                                             method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %></li>
  <% end %>
</ul>
