<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2>User List</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="users-index panel panel-default">
  <div class="panel-body">
    <% if @users.any? %>

      <%= paginate @users %>

      <% @users.each do |user| %>
        <div class="users-index-item col-sm-6 col-md-4 col-lg-3">
          <div class="col-md-4 col-lg-3">
            <div class="text-center">
              <%= link_to(edit_admin_user_path(user)) do %>
                <%= image_tag(user.avatar.mini.url, class: "img-center img-circle img-responsive", alt: user.username) %>

                <div class="username font-bold"><%= user.username %></div>
              <% end %>
            </div>
          </div>

          <div class="col-md-8 col-lg-9">
            <h3 class="name">
              <%= link_to(user.name, admin_user_path(user)) %>
            </h3>

            <div class="actions text-right">
              <%= link_to(fa_icon("folder-open", text: "Show"), admin_user_path(user), class: "btn btn-info btn-sm") %>
              <%= link_to(fa_icon("pencil", text: "Edit"), edit_admin_user_path(user), class: "btn btn-success btn-sm") %>
              <%= link_to(fa_icon("times", text: "Destroy"), admin_user_path(user), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
            </div>
          </div>
        </div>
      <% end %>

      <%= paginate @users %>

    <% else %>

      <div class="no-resources col-lg-12">
        <p>
          <%= Archangel.t(:no_resources, resource: @users.model_name.human.pluralize.downcase) %>
        </p>
      </div>

    <% end %>
  </div>
</div>
