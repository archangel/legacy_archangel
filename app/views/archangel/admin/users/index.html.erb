<%= render "search" %>

<% if @users.any? %>
  <table class="table table-responsive table-striped">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Name</th>
        <th>Username</th>
        <th>Role</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag(user.avatar.mini.url) %></td>
          <td><%= user.name %></td>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td>
            <%= link_to "Show", admin_user_path(user) %>
            <%= link_to "Edit", edit_admin_user_path(user) %>
            <%= link_to "Destroy", admin_user_path(user), method: :delete, data: { confirm: Archangel.t(:are_you_sure) } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>
<% else %>
  <p>
    <%= Archangel.t(:no_resources, resource: "Users") %>
  </p>
<% end %>

<%= link_to "New User", new_admin_user_path %>
