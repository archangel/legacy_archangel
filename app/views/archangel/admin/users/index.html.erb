<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>User List</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12 ibox-content">
      <% if @users.any? %>
        <%= paginate @users %>

        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Avatar</th>
                <th>Name</th>
                <th>Username</th>
                <th class="actions text-right">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag(user.avatar.micro.url, class: "img-circle") %></td>
                  <td><%= user.name %></td>
                  <td><%= user.username %></td>
                  <td class="actions pull-right">
                    <%= link_to(fa_icon("folder-open", text: "Show"), admin_user_path(user), class: "btn btn-info btn-sm") %>
                    <%= link_to(fa_icon("pencil", text: "Edit"), edit_admin_user_path(user), class: "btn btn-success btn-sm") %>
                    <%= link_to(fa_icon("times", text: "Destroy"), admin_user_path(user), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= paginate @users %>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: @users.model_name.human.pluralize) %>
        </p>
      <% end %>
    </div>
  </div>
</div>
