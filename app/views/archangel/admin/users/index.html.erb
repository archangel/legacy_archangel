<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>User List</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <% if @users.any? %>
        <%= paginate @users %>

        <div class="row">
          <% @users.each do |user| %>
            <div class="col-md-3">
              <div class="ibox">
                <div class="ibox-content product-box">
                  <div class="product-imitation">
                    <%= image_tag(user.avatar.medium.url) %>
                  </div>

                  <div class="product-desc">
                    <small class="text-muted"><%= user.username %></small>

                    <%= link_to user.name, admin_user_path(user), class: "product-name" %>

                    <div class="m-t text-right">
                      <%= link_to "Show", admin_user_path(user), class: "btn btn-xs btn-outline btn-default" %>
                      <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-xs btn-outline btn-primary" %>
                      <%= link_to "Destroy", admin_user_path(user), class: "btn btn-xs btn-outline btn-danger", method: :delete, data: { confirm: Archangel.t(:are_you_sure) } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <%= paginate @users %>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: @users.model_name.human.pluralize) %>
        </p>
      <% end %>
    </div>
  </div>
</div>
