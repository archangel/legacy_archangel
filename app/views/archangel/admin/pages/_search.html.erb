<%= search_form_for [:admin, @q],
                    builder: SimpleForm::FormBuilder,
                    class: "form-inline" do |f| %>
  <div class="form-inputs">
    <%= f.input :title_or_content_cont, label: false, placeholder: Archangel.t(:placeholder_pages) %>
    <%= f.button :submit, Archangel.t(:search), name: nil %>
  </div>
<% end %>
