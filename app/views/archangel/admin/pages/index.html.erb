<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2>Page List</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="pages-index panel panel-default">
  <div class="panel-body">
    <% if @pages.any? %>

      <%= paginate @pages %>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Permalink</th>
              <th>Author</th>
              <th class="actions text-right">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @pages.each do |page| %>
              <tr>
                <td><%= page.title %></td>
                <td><%= page.path %></td>
                <td><%= author_link(page.author) %></td>
                <td class="actions text-right">
                  <%= link_to(fa_icon("folder-open", text: "Show"), admin_page_path(page), class: "btn btn-info btn-sm") %>
                  <%= link_to(fa_icon("pencil", text: "Edit"), edit_admin_page_path(page), class: "btn btn-success btn-sm") %>
                  <%= link_to(fa_icon("times", text: "Destroy"), admin_page_path(page), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @pages %>

    <% else %>

      <div class="no-resources col-lg-12">
        <p>
          <%= Archangel.t(:no_resources, resource: @pages.model_name.human.pluralize) %>
        </p>
      </div>

    <% end %>
  </div>
</div>
