<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Page List</h2>

    <%= render "archangel/admin/pages/buttons" %>

    <%= render "archangel/admin/shared/breadcrumbs" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <% if @pages.any? %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Permalink</th>
              <th>Author</th>
              <th class="text-right">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @pages.each do |page| %>
              <tr>
                <td><%= page.title %></td>
                <td><%= page.path %></td>
                <td><%= author_link(page.author) %></td>
                <td class="text-right">
                  <div class="btn-group">
                    <%= link_to "Show", admin_page_path(page) %>
                    <%= link_to "Edit", edit_admin_page_path(page) %>
                    <%= link_to "Destroy", admin_page_path(page), method: :delete, data: { confirm: Archangel.t(:are_you_sure) } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: "Pages") %>
        </p>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "New Page", new_admin_page_path %>
