<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Page List</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12 ibox-content">
      <% if @pages.any? %>
        <%= paginate @pages %>

        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Permalink</th>
                <th>Author</th>
                <th class="actions text-right">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @pages.each do |page| %>
                <tr>
                  <td><%= page.title %></td>
                  <td><%= page.path %></td>
                  <td><%= author_link(page.author) %></td>
                  <td class="actions pull-right">
                    <%= link_to(fa_icon("question", text: "Show"), admin_page_path(page), class: "btn btn-info") %>
                    <%= link_to(fa_icon("check", text: "Edit"), edit_admin_page_path(page), class: "btn btn-success") %>
                    <%= link_to(fa_icon("times", text: "Destroy"), admin_page_path(page), class: "btn btn-danger", method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= paginate @pages %>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: @pages.model_name.human.pluralize) %>
        </p>
      <% end %>
    </div>
  </div>
</div>
