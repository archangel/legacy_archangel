<%= simple_form_for([:admin, @page], html: { class: "form-vertical" }) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :path %>
    <%= f.input :content, as: :text %>
    <%= f.input :meta_keywords %>
    <%= f.input :meta_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
