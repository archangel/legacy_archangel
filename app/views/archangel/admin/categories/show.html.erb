<div class="page-header panel panel-default">
  <div class="panel-body">
    <h2><%= Archangel.t(:show_resource, resource: @category.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="categories-show panel panel-default">
  <div class="panel-body">
    <p>
      <strong><%= Archangel.t(:name) %>:</strong>
      <%= @category.name %>
    </p>

    <p>
      <strong><%= Archangel.t(:slug) %>:</strong>
      <%= @category.slug %>
    </p>

    <p>
      <strong><%= Archangel.t(:description) %>:</strong>
      <%= @category.description %>
    </p>
  </div>
</div>
