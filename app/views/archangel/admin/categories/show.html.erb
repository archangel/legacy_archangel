<div class="row wrapper page-heading">
  <div class="col-lg-12">
    <h2>Category</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="categories-show row">
    <div class="col-lg-12">
      <p>
        <strong>Name:</strong>
        <%= @category.name %>
      </p>

      <p>
        <strong>Slug:</strong>
        <%= @category.slug %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @category.description %>
      </p>
    </div>
  </div>
</div>
