<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Category List</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12 ibox-content">
      <% if @categories.any? %>
        <%= paginate @categories %>

        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Slug</th>
                <th class="text-right">Action</th>
              </tr>
            </thead>

            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= category.slug %></td>
                  <td class="actions pull-right">
                    <%= link_to(fa_icon("folder-open", text: "Show"), admin_category_path(category), class: "btn btn-info btn-sm") %>
                    <%= link_to(fa_icon("pencil", text: "Edit"), edit_admin_category_path(category), class: "btn btn-success btn-sm") %>
                    <%= link_to(fa_icon("times", text: "Destroy"), admin_category_path(category), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= paginate @categories %>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: @categories.model_name.human.pluralize) %>
        </p>
      <% end %>
    </div>
  </div>
</div>
