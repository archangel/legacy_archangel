<div class="page-header panel panel-default">
  <div class="panel-body">
    <h2><%= Archangel.t(:index_resource, resource: @categories.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="categories-index panel panel-default">
  <div class="panel-body">
    <% if @categories.size %>

      <%= paginate @categories %>

      <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col"><%= Archangel.t(:name) %></th>
              <th scope="col"><%= Archangel.t(:slug) %></th>
              <th class="actions text-right" scope="col"><%= Archangel.t(:actions) %></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.slug %></td>
                <td class="actions text-right">
                  <%= link_to(glyphicon_icon("info-sign", text: Archangel.t(:show)), admin_category_path(category), class: "btn btn-info btn-sm") %>
                  <%= link_to(glyphicon_icon("ok-sign", text: Archangel.t(:edit)), edit_admin_category_path(category), class: "btn btn-warning btn-sm") %>
                  <%= link_to(glyphicon_icon("remove-sign", text: Archangel.t(:destroy)), admin_category_path(category), class: "btn btn-danger btn-sm",
                                                            method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @categories %>

    <% else %>

      <p class="no-resources">
        <%= Archangel.t(:no_resources, resource: @categories.model_name.human.pluralize.downcase) %>
      </p>

    <% end %>
  </div>
</div>
