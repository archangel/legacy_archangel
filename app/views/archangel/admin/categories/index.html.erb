<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Category List</h2>

    <%= render "archangel/admin/categories/buttons" %>

    <%= render "archangel/admin/shared/breadcrumbs" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <% if @categories.any? %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Slug</th>
              <th class="text-right">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.slug %></td>
                <td>
                  <ul class="nav nav-pills navbar-right">
                    <li><%= link_to "Show", admin_category_path(category) %></li>
                    <li><%= link_to "Edit", edit_admin_category_path(category) %></li>
                    <li><%= link_to "Destroy", admin_category_path(category), method: :delete, data: { confirm: Archangel.t(:are_you_sure) } %></li>
                  </ul>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: "Categories") %>
        </p>
      <% end %>
    </div>
  </div>
</div>
