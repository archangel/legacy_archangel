<%= simple_form_for([:admin, @site], as: :site, url: :admin_site) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :logo, as: :file %>
    <%= f.input :logo_cache, as: :hidden %>

    <div class="form-group site_logo_image">
      <div class="col-sm-10 col-sm-offset-2">
        <%= image_tag(f.object.logo.thumb.url, alt: "") %>
      </div>
    </div>

    <%= f.input :remove_logo, as: :boolean,
                              checked_value: true,
                              unchecked_value: false if f.object.logo? %>

    <%= f.input :theme, as: :theme, input_html: { value: "default" } %>
    <%= f.input :locale, as: :language %>

    <%= f.input :favicon, as: :file %>
    <%= f.input :favicon_cache, as: :hidden %>
    <%= f.input :remove_favicon, as: :boolean,
                                 checked_value: true,
                                 unchecked_value: false if f.object.favicon? %>

    <%= f.input :meta_keywords, as: :meta_keywords, input_html: { multiple: true } %>
    <%= f.input :meta_description %>
  </div>

  <div class="form-actions text-right">
    <%= f.button :submit %>
  </div>
<% end %>
