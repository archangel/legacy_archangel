<%= simple_form_for([:admin, @site],
                    as: :site,
                    url: :admin_site,
                    html: { class: "form-vertical" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>

    <%= image_tag(@site.logo.thumb.url) %>

    <%= f.input :logo, as: :file %>
    <%= f.input :logo_cache, as: :hidden %>

    <%= f.input :remove_logo, as: :boolean,
                              checked_value: true,
                              unchecked_value: false if @site.logo? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
