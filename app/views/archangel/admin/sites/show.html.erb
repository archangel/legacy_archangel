<div class="row wrapper page-heading">
  <div class="col-lg-12">
    <h2>Site</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="site-show row">
    <div class="col-lg-12">
      <%= image_tag(@site.logo.thumb.url) %>

      <p>
        <strong>Name:</strong>
        <%= @site.name %>
      </p>

      <p>
        <strong>Locale:</strong>
        <%= @site.locale %>
      </p>

      <p>
        <strong>META Keywords:</strong>
        <%= @site.meta_keywords %>
      </p>

      <p>
        <strong>META Description:</strong>
        <%= @site.meta_description %>
      </p>
    </div>
  </div>
</div>
