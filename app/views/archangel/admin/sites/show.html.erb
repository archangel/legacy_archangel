<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Site</h2>

    <%= render "archangel/admin/sites/buttons" %>

    <%= render "archangel/admin/shared/breadcrumbs" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <%= image_tag(@site.logo.thumb.url) %>

      <p>
        <strong>Title:</strong>
        <%= @site.title %>
      </p>

      <p>
        <strong>META Keywords:</strong>
        <%= @site.meta_keywords %>
      </p>

      <p>
        <strong>META Description:</strong>
        <%= @site.meta_description %>
      </p>
    </div>
  </div>
</div>

<%= link_to "Edit", edit_admin_site_path %>
