<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2>Site</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="site-show panel panel-default">
  <div class="panel-body">
    <%= image_tag(@site.logo.thumb.url, alt: @site.name) %>

    <p>
      <strong>Name:</strong>
      <%= @site.name %>
    </p>

    <p>
      <strong>Theme:</strong>
      <%= @site.theme %>
    </p>

    <p>
      <strong>Locale:</strong>
      <%= @site.locale %>
    </p>

    <p>
      <strong>META Keywords:</strong>
      <%= @site.meta_keywords %>
    </p>

    <p>
      <strong>META Description:</strong>
      <%= @site.meta_description %>
    </p>
  </div>
</div>
