<div class="panel panel-default">
  <div class="panel-body">
    <h2><%= Archangel.t(:index_resource, resource: @menus.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="menus-index panel panel-default">
  <div class="panel-body">
    <% if @menus.present? %>

      <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col"><%= Archangel.t(:name) %></th>
              <th scope="col"><%= Archangel.t(:slug) %></th>
              <th scope="col"><%= Archangel.t(:id_attribute) %></th>
              <th scope="col"><%= Archangel.t(:class_attribute) %></th>
              <th scope="col"><%= Archangel.t(:selected_class) %></th>
              <th class="actions text-right" scope="col"><%= Archangel.t(:actions) %></th>
            </tr>
          </thead>

          <tbody>
            <% @menus.each do |menu| %>
              <tr>
                <td><%= link_to(menu.name, admin_menu_path(menu)) %></td>
                <td><%= menu.slug %></td>
                <td><%= menu.attr_id %></td>
                <td><%= menu.attr_class %></td>
                <td><%= menu.selected_class %></td>
                <td class="actions text-right">
                  <%= link_to(glyphicon_icon("info-sign", text: Archangel.t(:show)), admin_menu_path(menu), class: "btn btn-info btn-sm") %>
                  <%= link_to(glyphicon_icon("ok-sign", text: Archangel.t(:edit)), edit_admin_menu_path(menu), class: "btn btn-warning btn-sm") %>
                  <%= link_to(glyphicon_icon("remove-sign", text: Archangel.t(:destroy)), admin_menu_path(menu), class: "btn btn-danger btn-sm",
                                                            method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    <% else %>

      <p class="no-resources">
        <%= Archangel.t(:no_resources, resource: @menus.model_name.human.pluralize.downcase) %>
      </p>

    <% end %>
  </div>
</div>
