<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2><%= Archangel.t(:show_resource, resource: @menu.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="menus-show panel panel-default">
  <div class="panel-body">
    <p>
      <strong><%= Archangel.t(:name) %>:</strong>
      <%= @menu.name %>
    </p>

    <p>
      <strong><%= Archangel.t(:slug) %>:</strong>
      <%= @menu.slug %>
    </p>

    <p>
      <strong><%= Archangel.t(:id_attribute) %>:</strong>
      <%= @menu.attr_id %>
    </p>

    <p>
      <strong><%= Archangel.t(:class_attribute) %>:</strong>
      <%= @menu.attr_class %>
    </p>

    <p>
      <strong><%= Archangel.t(:selected_class) %>:</strong>
      <%= @menu.selected_class %>
    </p>
  </div>
</div>
