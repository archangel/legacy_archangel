<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2><%= Archangel.t(:index_resource, resource: @posts.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="posts-index panel panel-default">
  <div class="panel-body">
    <% if @posts.any? %>

      <%= paginate @posts %>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= Archangel.t(:title) %></th>
              <th><%= Archangel.t(:permalink) %></th>
              <th><%= Archangel.t(:author) %></th>
              <th class="text-right"><%= Archangel.t(:actions) %></th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.path %></td>
                <td><%= author_link(post.author) %></td>
                <td class="actions text-right">
                  <%= link_to(fa_icon("folder-open", text: Archangel.t(:show)), admin_post_path(post), class: "btn btn-info btn-sm") %>
                  <%= link_to(fa_icon("pencil", text: Archangel.t(:edit)), edit_admin_post_path(post), class: "btn btn-success btn-sm") %>
                  <%= link_to(fa_icon("times", text: Archangel.t(:destroy)), admin_post_path(post), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @posts %>

    <% else %>

      <div class="no-resources col-lg-12">
        <p>
          <%= Archangel.t(:no_resources, resource: @posts.model_name.human.pluralize.downcase) %>
        </p>
      </div>

    <% end %>
  </div>
</div>
