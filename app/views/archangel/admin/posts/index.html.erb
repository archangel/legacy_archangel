<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Post List</h2>

    <%= render "archangel/admin/posts/buttons" %>

    <%= render "archangel/admin/shared/breadcrumbs" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <% if @posts.any? %>
        <%= paginate @posts %>

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th class="text-right">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= author_link(post.author) %></td>
                <td>
                  <ul class="nav nav-pills navbar-right">
                    <li><%= link_to "Show", admin_post_path(post) %></li>
                    <li><%= link_to "Edit", edit_admin_post_path(post) %></li>
                    <li><%= link_to "Destroy", admin_post_path(post), method: :delete, data: { confirm: Archangel.t(:are_you_sure) } %></li>
                  </ul>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= paginate @posts %>
      <% else %>
        <p>
          <%= Archangel.t(:no_resources, resource: "Posts") %>
        </p>
      <% end %>
    </div>
  </div>
</div>
