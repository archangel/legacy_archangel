<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2>Post</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="pages-show panel panel-default">
  <div class="panel-body">
    <%= image_tag(@post.feature.thumb.url) %>

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Path:</strong>
      <%= @post.path %>
    </p>

    <p>
      <strong>Slug:</strong>
      <%= @post.slug %>
    </p>

    <p>
      <strong>Author:</strong>
      <%= author_link(@post.author) %>
    </p>

    <p>
      <strong>META Keywords:</strong>
      <%= @post.meta_keywords %>
    </p>

    <p>
      <strong>META Description:</strong>
      <%= @post.meta_description %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @post.content %>
    </p>
  </div>
</div>
