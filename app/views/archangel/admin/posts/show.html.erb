<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Post</h2>

    <%= render "archangel/admin/posts/buttons" %>

    <%= render "archangel/admin/shared/breadcrumbs" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Slug:</strong>
        <%= @post.slug %>
      </p>

      <p>
        <strong>Author:</strong>
        <%= author_link(@post.author) %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @post.content %>
      </p>

      <p>
        <strong>Excerpt:</strong>
        <%= @post.excerpt %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @post.content %>
      </p>
    </div>
  </div>
</div>
