<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2>Tag</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="tags-show panel panel-default">
  <div class="panel-body">
    <p>
      <strong>Name:</strong>
      <%= @tag.name %>
    </p>

    <p>
      <strong>Slug:</strong>
      <%= @tag.slug %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @tag.description %>
    </p>
  </div>
</div>
