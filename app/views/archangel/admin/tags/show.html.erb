<div class="row wrapper border-bottom page-heading">
  <div class="col-lg-12">
    <h2>Tag</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <p>
        <strong>Name:</strong>
        <%= @tag.name %>
      </p>

      <p>
        <strong>Slug:</strong>
        <%= @tag.slug %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @tag.description %>
      </p>
    </div>
  </div>
</div>
