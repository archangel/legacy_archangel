<div class="row wrapper page-header">
  <div class="col-lg-12">
    <h2>Tag List</h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="tags-index panel panel-default">
  <div class="panel-body">
    <% if @tags.any? %>

      <%= paginate @tags %>

      <div class="table-responsive">
        <table class="table table-stripedr">
          <thead>
            <tr>
              <th>Name</th>
              <th>Slug</th>
              <th class="actions text-right">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td><%= link_to(tag.name, admin_tag_path(tag)) %></td>
                <td><%= tag.slug %></td>
                <td class="actions text-right">
                  <%= link_to(fa_icon("folder-open", text: "Show"), admin_tag_path(tag), class: "btn btn-info btn-sm") %>
                  <%= link_to(fa_icon("pencil", text: "Edit"), edit_admin_tag_path(tag), class: "btn btn-success btn-sm") %>
                  <%= link_to(fa_icon("times", text: "Destroy"), admin_tag_path(tag), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @tags %>

    <% else %>

    <div class="no-resources col-lg-12">
      <p>
        <%= Archangel.t(:no_resources, resource: @tags.model_name.human.pluralize.downcase) %>
      </p>
    </div>

    <% end %>
  </div>
</div>
