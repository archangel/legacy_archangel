<%= javascript_tag do %>
var Archangel = (function(object) {
  var i18n = <%== {
    datetimepicker: {
      format:       Archangel.t(:format_js, scope: :datetimepicker),
      time_format:  Archangel.t(:time_format_js, scope: :datetimepicker),
      today:        Archangel.t(:today, scope: :datetimepicker),
      clear:        Archangel.t(:clear, scope: :datetimepicker),
      close:        Archangel.t(:close, scope: :datetimepicker),
      selectMonth:  Archangel.t(:select_month, scope: :datetimepicker),
      prevMonth:    Archangel.t(:prev_month, scope: :datetimepicker),
      nextMonth:    Archangel.t(:next_month, scope: :datetimepicker),
      selectYear:   Archangel.t(:select_year, scope: :datetimepicker),
      prevYear:     Archangel.t(:prev_year, scope: :datetimepicker),
      nextYear:     Archangel.t(:next_year, scope: :datetimepicker),
      selectDecade: Archangel.t(:select_decade, scope: :datetimepicker),
      prevDecade:   Archangel.t(:prev_decade, scope: :datetimepicker),
      nextDecade:   Archangel.t(:next_decade, scope: :datetimepicker),
      prevCentury:  Archangel.t(:prev_century, scope: :datetimepicker),
      nextCentury:  Archangel.t(:next_century, scope: :datetimepicker)
    }
  }.to_json %>;

  object.translate = function(key) {
    return i18n[key];
  };

  return object;
}(Archangel || {}));
<% end %>
