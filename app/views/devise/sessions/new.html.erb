<div class="panel panel-default devise-bs">
  <div class="panel-heading text-center">
    <h4><%= Archangel.t("auth.sign_in") %></h4>
  </div>

  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: false, class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= Archangel.t("auth.remember_me") %>
          <% end %>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit Archangel.t("auth.button.sign_in"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
