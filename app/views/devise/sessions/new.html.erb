    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form", role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: false, class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= Archangel.t("auth.remember_me") %>
          <% end %>
        </div>
      <% end %>

      <div class="actions form-actions text-center">
        <%= f.submit Archangel.t("auth.button.sign_in"), class: "btn btn-primary block full-width" %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
