<div class="panel panel-default devise-bs">
  <div class="panel-heading text-center">
    <h4><%= Archangel.t("auth.change_my_password") %></h4>
  </div>

  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, Archangel.t("auth.new_password") %>
        <%= f.password_field :password, autofocus: true, autocomplete: false, class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, Archangel.t("auth.confirm_new_password") %>
        <%= f.password_field :password_confirmation, autocomplete: false, class: "form-control"  %>
      </div>

      <div class="actions text-center">
        <%= f.submit Archangel.t("auth.button.change_my_password"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
