<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="actions form-actions text-center">
    <%= f.submit Archangel.t("auth.button.send_me_reset_password_instructions"), class: "btn btn-primary block full-width" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
