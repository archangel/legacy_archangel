<div class="panel panel-default devise-bs">
  <div class="panel-heading text-center">
    <h4><%= t("devise.invitations.new.header") %></h4>
  </div>

  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-group">
          <%= f.label field %>
          <%= f.text_field field, class: "form-control" %>
        </div>
      <% end -%>

      <div class="actions text-center">
        <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
