<div class="row">
  <div class="col-sm-offset-4 col-sm-4 col-xs-offset-1 col-xs-10">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-group">
          <%= f.label field %>
          <%= f.text_field field, class: "form-control" %>
        </div>
      <% end -%>

      <div class="actions form-actions text-center">
        <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary block full-width" %>
      </div>
    <% end %>
  </div>
</div>
