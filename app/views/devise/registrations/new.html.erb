<div class="row">
  <div class="col-sm-offset-4 col-sm-4 col-xs-offset-1 col-xs-10">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: false, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: false, class: "form-control" %>
      </div>

      <div class="actions form-actions text-center">
        <%= f.submit "Sign up", class: "btn btn-primary block full-width" %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-offset-4 col-sm-4 col-xs-offset-1 col-xs-10">
    <%= render "devise/shared/links" %>
  </div>
</div>
