<header class="page-header">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="sidebar-toggle btn btn-default btn-md">
          <span class="sr-only"><%= Archangel.t(:toggle_navigation) %></span>

          <%= glyphicon_icon("menu-hamburger") %>
        </button>

        <a class="navbar-brand" href="<%= admin_root_path %>"><%= current_site.name %></a>

        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu_supplementary" aria-expanded="false">
          <span class="sr-only"><%= Archangel.t(:toggle_navigation) %></span>

          <%= glyphicon_icon("option-vertical") %>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="menu_supplementary">
        <ul class="pull-right nav navbar-nav">
          <li><%= link_to(glyphicon_icon("user", text: current_user.name), admin_profile_path) %></li>
          <li><%= link_to(glyphicon_icon("off", text: Archangel.t(:logout)), destroy_user_session_path, method: :delete) %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>
